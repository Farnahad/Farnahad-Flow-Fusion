<userControl:FffUserControl
    x:Class="FarnahadFlowFusion.Core.Control.UserControl.ButtonSet.FffSaveDeleteCancelButtonSetUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:userControl="clr-namespace:FarnahadFlowFusion.Core.Control.UserControl"
    xmlns:container="clr-namespace:FarnahadFlowFusion.Core.Control.Container"
    xmlns:button="clr-namespace:FarnahadFlowFusion.Core.Control.Button"
    xmlns:fff="FarnahadFlowFusion">
    <container:FffWrapPanel HorizontalAlignment="Center">
        <button:FffSimpleSaveButton Command="{fff:FffBinding Path=SaveCommand}" />
        <button:FffSimpleDeleteButton Command="{fff:FffBinding Path=DeleteCommand}" />
        <button:FffSimpleCancelButton Command="{fff:FffBinding Path=CancelCommand}" />
    </container:FffWrapPanel>
</userControl:FffUserControl>